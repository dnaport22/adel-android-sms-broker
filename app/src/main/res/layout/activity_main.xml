<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dnaport.assistanttextmessaging.MainActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="368dp"
            android:layout_height="200dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="8dp" android:id="@+id/linearLayout3">
        <Button
                android:text="Save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/saveConfigButton" android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless" android:background="@android:color/holo_green_dark"
                android:backgroundTint="@android:color/holo_green_dark"
                android:textColor="@android:color/background_light"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginRight="7dp" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp" app:layout_constraintLeft_toLeftOf="parent" android:id="@+id/linearLayout2"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3" android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintVertical_bias="0.0">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text|textPersonName"
                android:ems="10"
                android:id="@+id/triggerEdittext" android:layout_weight="1" android:hint="Ask Google"
                android:textColorLink="@android:color/holo_orange_dark"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
